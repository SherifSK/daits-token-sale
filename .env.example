# DAITS Token Deployment Configuration
# Copy this file to .env and fill in your actual values

# Required Configuration
MULTISIG_ADMIN_ADDRESS=0x1234567890123456789012345678901234567890  # Your Safe multisig wallet address
PRIVATE_KEY=0xabc123def456...  # Deployer private key (keep this secure!)
RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID  # RPC endpoint for deployment

# Optional Configuration (defaults will be used if not set)
TOKEN_NAME="DAITS Token"
TOKEN_SYMBOL="DAITS"
MAX_SUPPLY=0  # 0 = unlimited supply, >0 = capped supply (e.g., 1000000000000000000000000 for 1M tokens with 18 decimals)

# For Etherscan Verification
ETHERSCAN_API_KEY=ABC123DEF456...  # Your Etherscan API key

# Network-specific RPC URLs (examples)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Security Notes:
# - Never commit your actual .env file to version control
# - Keep your PRIVATE_KEY secure and never share it
# - Use different keys for testnet and mainnet deployments
# - Consider using hardware wallets for mainnet deployments